        <!-- Grupo de impuestos ITBMS -->
        <record id="tax_group_itbms" model="account.tax.group">
            <field name="name">ITBMS</field>
            <field name="sequence">10</field>
        </record>
        
        <!-- Cuentas contables para ITBMS -->
        <record id="account_itbms_payable" model="account.account">
            <field name="name">ITBMS por Pagar</field>
            <field name="code">2101001</field>
            <field name="account_type">liability_payable</field>
            <field name="reconcile">True</field>
        </record>
        
        <record id="account_itbms_receivable" model="account.account">
            <field name="name">ITBMS por Cobrar</field>
            <field name="code">1101001</field>
            <field name="account_type">asset_receivable</field>
            <field name="reconcile">True</field>
        </record>
        
