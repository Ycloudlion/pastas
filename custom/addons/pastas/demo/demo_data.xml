        <record id="demo_dgi_config" model="dgi.config">
            <field name="company_id" ref="base.main_company"/>
            <field name="ruc">12345678</field>
            <field name="dv">1</field>
            <field name="company_name">Empresa Demo S.A.</field>
            <field name="commercial_name">Demo Corp</field>
            <field name="address">Calle 50, Edificio Plaza, Piso 15, Ciudad de Panamá</field>
            <field name="phone">+507 1234-5678</field>
            <field name="email">demo@empresa.com</field>
            <field name="pac_provider">iofacturo</field>
            <field name="pac_environment">test</field>
            <field name="pac_username">demo_user</field>
            <field name="pac_password">demo_password</field>
            <field name="pac_url">https://test.iofacturo.com/api</field>
