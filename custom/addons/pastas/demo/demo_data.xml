            <field name="street">Avenida Balboa, Edificio Torre, Piso 10</field>
            <field name="phone">+507 8765-4321</field>
            <field name="email">cliente@demo.com</field>
            <field name="is_company">True</field>
            <field name="customer_rank">1</field>
        </record>
        
        <!-- Proveedor de demostración -->
        <record id="demo_supplier" model="res.partner">
            <field name="name">Proveedor Demo S.A.</field>
            <field name="vat">11223344-3</field>
            <field name="street">Calle 50, Edificio Comercial, Local 5</field>
            <field name="phone">+507 5555-6666</field>
            <field name="email">proveedor@demo.com</field>
            <field name="is_company">True</field>
            <field name="supplier_rank">1</field>
        </record>
        
    </data>
</odoo>
